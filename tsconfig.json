{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": false,
    "target": "es5",
    "outDir": ".build",
    "moduleResolution": "node", // Add this line
    "resolveJsonModule": true, // Add this line
    "lib": ["es2015"],
    "rootDir": "src",
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ]
}